<UserControl x:Class="QuizGame.Views.EditQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
    
    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Background="#E67E22" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" 
                    Content="← Back to Menu" 
                    Command="{Binding BackToMenuCommand}"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Margin="20,0,0,0"
                    Cursor="Hand" />
            
            <TextBlock Grid.Column="1" 
                       Text="Edit Existing Quiz" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="50,30,50,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Quiz Selection Panel -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Margin="0,0,20,0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Available Quizzes" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"
                               Foreground="#2C3E50"/>
                    
                    <ListBox ItemsSource="{Binding AvailableQuizzes}"
                             SelectedItem="{Binding SelectedQuiz}"
                             Height="400"
                             FontSize="14"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Content="Load Quiz" 
                            Command="{Binding LoadQuizCommand}"
                            Width="150"
                            Height="40"
                            FontSize="16"
                            Margin="0,20,0,0"
                            Background="#E67E22"
                            Style="{StaticResource QuizGameButtonStyle}">
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Question Editor Panel -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsQuizLoadedVisibility}">
                <StackPanel>
                    
                    <!-- Quiz Name -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="30"
                            Margin="0,0,0,20"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Quiz Name" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"
                                       Foreground="#2C3E50"/>
                            <TextBox Text="{Binding QuizName, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="16"
                                     Height="40"
                                     Padding="10"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Questions List -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="30"
                            Margin="0,0,0,20"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Questions Overview" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"
                                       Foreground="#2C3E50"/>
                            
                            <ListBox ItemsSource="{Binding Questions}"
                                     SelectedItem="{Binding SelectedQuestion}"
                                     Height="300"
                                     FontSize="14"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="1"
                                     Margin="0,0,0,20">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding QuestionNumber, StringFormat='Question {0}'}" 
                                                       FontWeight="Bold"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding QuestionText}" 
                                                       TextWrapping="Wrap"
                                                       Foreground="#6C757D"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <Button Content="Edit Selected Question" 
                                    Command="{Binding EditQuestionCommand}"
                                    Width="200"
                                    Height="40"
                                    FontSize="16"
                                    Background="#E67E22"
                                    Style="{StaticResource QuizGameButtonStyle}">
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Question Editor (shown when question selected) -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="30"
                            Margin="0,0,0,20"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Visibility="{Binding IsQuestionSelectedVisibility}">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedQuestion.QuestionNumber, StringFormat='Editing Question {0}'}" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"
                                       Foreground="#2C3E50"/>
                            
                            <TextBlock Text="Question Text:" 
                                       FontSize="14" 
                                       Margin="0,0,0,5"
                                       Foreground="#6C757D"/>
                            <TextBox Text="{Binding SelectedQuestion.QuestionText, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="14"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Padding="8"
                                     Margin="0,0,0,15"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"/>
                            
                            <TextBlock Text="Answer 1:" 
                                       FontSize="14" 
                                       Margin="0,0,0,5"
                                       Foreground="#6C757D"/>
                            <TextBox Text="{Binding SelectedQuestion.Answer1, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="14"
                                     Height="35"
                                     Padding="8"
                                     Margin="0,0,0,10"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"/>
                            
                            <TextBlock Text="Answer 2:" 
                                       FontSize="14" 
                                       Margin="0,0,0,5"
                                       Foreground="#6C757D"/>
                            <TextBox Text="{Binding SelectedQuestion.Answer2, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="14"
                                     Height="35"
                                     Padding="8"
                                     Margin="0,0,0,10"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"/>
                            
                            <TextBlock Text="Answer 3:" 
                                       FontSize="14" 
                                       Margin="0,0,0,5"
                                       Foreground="#6C757D"/>
                            <TextBox Text="{Binding SelectedQuestion.Answer3, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="14"
                                     Height="35"
                                     Padding="8"
                                     Margin="0,0,0,10"
                                     BorderBrush="#CED4DA"
                                     BorderThickness="1"/>
                            
                            <TextBlock Text="Correct Answer:" 
                                       FontSize="14" 
                                       Margin="0,0,0,5"
                                       Foreground="#6C757D"/>
                            <ComboBox SelectedItem="{Binding SelectedQuestion.CorrectAnswer, UpdateSourceTrigger=PropertyChanged}"
                                      FontSize="14"
                                      Height="35"
                                      Padding="8"
                                      Margin="0,0,0,20"
                                      BorderBrush="#CED4DA"
                                      BorderThickness="1">
                                <ComboBoxItem Content="{Binding SelectedQuestion.Answer1}"/>
                                <ComboBoxItem Content="{Binding SelectedQuestion.Answer2}"/>
                                <ComboBoxItem Content="{Binding SelectedQuestion.Answer3}"/>
                            </ComboBox>
                            
                            <Button Content="Save Changes" 
                                    Command="{Binding SaveChangesCommand}"
                                    Width="200"
                                    Height="40"
                                    FontSize="16"
                                    Background="#2ECC71"
                                    Style="{StaticResource QuizGameButtonStyle}">
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
