<UserControl x:Class="QuizGame.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Petty Pursuit"
                   FontSize="48"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0" 
                   Foreground="#2c3e50" />
        
        <!-- Menu Buttons -->
        <StackPanel Grid.Row="1"
                    Width="240"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            
            <!-- Play -->
            <Button Content="Play Quiz"
                    Command="{Binding NavigateToPlayCommand}"
                    Margin="0,14,0,0"
                    Style="{StaticResource PrimaryButtonStyle}">
            </Button>
            
            <!-- Create -->
            <Button Content="Create New Quiz"
                    Command="{Binding NavigateToCreateCommand}"
                    Margin="0,14,0,0"
                    Style="{StaticResource SuccessButtonStyle}">
            </Button>
            
            <!-- Edit -->
            <Button Content="Edit Existing Quiz"
                    Command="{Binding NavigateToEditCommand}"
                    Margin="0,14,0,0"
                    Style="{StaticResource EditButtonStyle}">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
