<UserControl x:Class="QuizGame.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Petty Pursuit"
                   FontSize="48"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,48,0,60" 
                   Foreground="#2c3e50" />
        
        <!-- Menu Buttons -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            
            <!-- Play -->
            <Button Content="Play Quiz"
                    Command="{Binding NavigateToPlayCommand}"
                    Height="60"
                    Width="250"
                    Margin="0,0,0,20"
                    Background="#3498DB"
                    Style="{StaticResource QuizGameButtonStyle}">
            </Button>
            
            <!-- Create -->
            <Button Content="Create New Quiz"
                    Command="{Binding NavigateToCreateCommand}"
                    Height="60"
                    Width="250"
                    Margin="0,0,0,20"
                    Background="#2ECC71"
                    Style="{StaticResource QuizGameButtonStyle}">
            </Button>
            
            <!-- Edit -->
            <Button Content="Edit Existing Quiz"
                    Command="{Binding NavigateToEditCommand}"
                    Height="60"
                    Width="250"
                    Margin="0,0,0,20"
                    Background="#E67E22"
                    Style="{StaticResource QuizGameButtonStyle}">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
