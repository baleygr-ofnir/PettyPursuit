<UserControl x:Class="QuizGame.Views.CreateQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
<Grid Background="#ECF0F1">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Grid Grid.Row="0"
          Height="80"
          Background="#16A085">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <Button Grid.Column="0" 
                Content="←" 
                Command="{Binding BackToMenuCommand}"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                FontSize="16"
                FontWeight="Bold"
                Margin="20,0,0,0"
                Cursor="Hand"/>
            
        <TextBlock Grid.Column="1" 
                   Text="Create New Quiz" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>

    <!-- Main Content -->
    <Grid Grid.Row="1"
          MaxWidth="800"
          Margin="50,30,50,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Quiz Name -->
            <RowDefinition Height="*"/>      <!-- Questions List, can grow/scroll -->
            <RowDefinition Height="Auto"/>   <!-- Save Section -->
        </Grid.RowDefinitions>
        
        <!-- Quiz Title Section -->
        <Border Grid.Row="0"
                Background="White" 
                CornerRadius="10" 
                Padding="30"
                Margin="0,0,0,30"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Quiz Title" 
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"
                           Foreground="#2C3E50" />
                <TextBox Text="{Binding QuizName, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16"
                         Height="40"
                         Padding="10"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1" />
            </StackPanel>
        </Border>

        <!-- Questions List (Scrollable only when needed) -->
        
        <Border Grid.Row="1" 
                CornerRadius="10" 
                Padding="30"
                Margin="0,0,0,30"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          MinHeight="200"
                          MaxHeight="400"
                          Margin="0,0,0,20">
                
                <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Questions" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center" />
                            <Button Content="+" 
                                    Command="{Binding AddQuestionCommand}"
                                    HorizontalAlignment="Right"
                                    Background="#2ECC71"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="5"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27AE60"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding Questions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                            CornerRadius="5" 
                                            Padding="20"
                                            Margin="0,0,0,15"
                                            BorderBrush="#DEE2E6"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,15">
                                                <TextBlock Text="{Binding QuestionNumber, StringFormat='Question {0}'}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="#495057"/>
                                                <Button Content="Remove" 
                                                        Command="{Binding DataContext.RemoveQuestionCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        HorizontalAlignment="Right"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="10,5"
                                                        FontSize="12"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                CornerRadius="3"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter VerticalAlignment="Center"
                                                                                    HorizontalAlignment="Center" />
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                            
                                            <TextBlock Text="Statement:" 
                                                       FontSize="14" 
                                                       Margin="0,0,0,5"
                                                       Foreground="#6C757D"/>
                                            <TextBox Text="{Binding Statement, UpdateSourceTrigger=PropertyChanged}" 
                                                     FontSize="14"
                                                     Height="60"
                                                     TextWrapping="Wrap"
                                                     AcceptsReturn="True"
                                                     Padding="8"
                                                     Margin="0,0,0,15"
                                                     BorderBrush="#CED4DA"
                                                     BorderThickness="1"/>
                                            
                                            <TextBlock Text="First Answer:" 
                                                       FontSize="14" 
                                                       Margin="0,0,0,5"
                                                       Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding FirstAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="14"
                                                         Height="35"
                                                         Padding="8"
                                                         Margin="0,0,0,10"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Second Answer:" 
                                                           FontSize="14" 
                                                           Margin="0,0,0,5"
                                                           Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding SecondAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="14"
                                                         Height="35"
                                                         Padding="8"
                                                         Margin="0,0,0,10"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Third Answer:" 
                                                           FontSize="14" 
                                                           Margin="0,0,0,5"
                                                           Foreground="#6C757D" />
                                                
                                                <TextBox Text="{Binding ThirdAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="14"
                                                         Height="35"
                                                         Padding="8"
                                                         Margin="0,0,0,10"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Fourth Answer:" 
                                                           FontSize="14" 
                                                           Margin="0,0,0,5"
                                                           Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding FourthAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="14"
                                                         Height="35"
                                                         Padding="8"
                                                         Margin="0,0,0,10"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Correct Answer:" 
                                                           FontSize="14" 
                                                           Margin="0,0,0,5"
                                                           Foreground="#6C757D" />
                                            
                                                <ComboBox SelectedItem="{Binding CorrectAnswer, UpdateSourceTrigger=PropertyChanged}"
                                                      FontSize="14"
                                                      Height="35"
                                                      Padding="8"
                                                      BorderBrush="#CED4DA"
                                                      BorderThickness="1">
                                                    <ComboBoxItem Content="{Binding FirstAnswer}"/>
                                                    <ComboBoxItem Content="{Binding SecondAnswer}"/>
                                                    <ComboBoxItem Content="{Binding ThirdAnswer}"/>
                                                    <ComboBoxItem Content="{Binding FourthAnswer}"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
            </ScrollViewer>
        </Border>
        

        <!-- Save Section -->
        <Border Grid.Row="2"
                MaxHeight="190"
                CornerRadius="10" 
                Padding="30"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Save Format" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           Foreground="#2C3E50"/>
                        
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <RadioButton Content="JSON" 
                                     IsChecked="{Binding IsJsonFormat}"
                                     FontSize="16"
                                     Margin="0,0,30,0"
                                     VerticalContentAlignment="Center"/>
                        <RadioButton Content="XML" 
                                     IsChecked="{Binding IsXmlFormat}"
                                     FontSize="16"
                                     Margin="0,0,30,0"
                                     VerticalContentAlignment="Center"/>
                        <RadioButton Content="CSV" 
                                     IsChecked="{Binding IsCsvFormat}"
                                     FontSize="16"
                                     VerticalContentAlignment="Center"/>
                    </StackPanel>
                        
                    <Button Content="Save Quiz" 
                            Command="{Binding SaveQuizCommand}"
                            Width="200"
                            Height="50"
                            Margin="0,1,0,0"
                            FontSize="18"
                            Background="#2ECC71"
                            Style="{StaticResource QuizGameButtonStyle}">
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>


