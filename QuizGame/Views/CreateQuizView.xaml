<UserControl x:Class="QuizGame.Views.CreateQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
<Grid Background="#ECF0F1">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Grid Grid.Row="0"
          Height="80"
          Background="#16A085">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <!-- Back Button -->
        <Button Grid.Column="0"
                Content="←"
                Command="{Binding BackCommand}"
                Background="Transparent"
                Foreground="White"
                FontSize="32"
                FontWeight="Bold"
                Padding="0,0,0,8"
                Margin="20,2,0,0"
                Cursor="Hand"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" />
            
        <TextBlock Grid.Column="1" 
                   Text="Create"
                   Margin="12,0,0,0"
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
    </Grid>

    <!-- Main Content -->
    <Grid Grid.Row="1"
          MaxWidth="700"
          Margin="18,14,18,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Quiz Name -->
            <RowDefinition Height="*"/>      <!-- Questions List, can grow/scroll -->
            <RowDefinition Height="Auto"/>   <!-- Save Section -->
        </Grid.RowDefinitions>
        
        <!-- Quiz Category Section -->
        <Border Grid.Row="0"
                Background="White" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,10"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Quiz Category" 
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,4"
                           Foreground="#2C3E50" />
                <TextBox Text="{Binding QuizCategory, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="13"
                         Height="28"
                         MaxWidth="240"
                         Padding="6,2"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1" />
            </StackPanel>
        </Border>

        <!-- Questions List (Scrollable only when needed) -->
        
        <Border Grid.Row="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,10"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          MinHeight="100"
                          MaxHeight="280">
                
                <StackPanel>
                        <Grid Margin="0,0,0,8"
                              VerticalAlignment="Top">
                            <TextBlock Text="Questions" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center" />
                            <Button Content="+" 
                                    Command="{Binding AddQuestionCommand}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource UtilityButtonStyle}"/>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding Questions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                            CornerRadius="5" 
                                            Padding="12"
                                            Margin="0,0,0,7"
                                            BorderBrush="#DEE2E6"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="{Binding QuestionNumber, StringFormat='Question {0}'}" 
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           Foreground="#495057"/>
                                                <Button Content="Remove" 
                                                        Command="{Binding DataContext.RemoveQuestionCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        HorizontalAlignment="Right"
                                                        Padding="6,2"
                                                        FontSize="11"
                                                        Style="{StaticResource DangerButtonStyle}"/>
                                            </Grid>
                                            
                                            <TextBlock Text="Statement:"
                                                       Height="44"
                                                       Margin="0,0,0,2"
                                                       FontSize="12"
                                                       Foreground="#6C757D"/>
                                            <TextBox Text="{Binding Statement, UpdateSourceTrigger=PropertyChanged}" 
                                                     FontSize="12"
                                                     Height="44"
                                                     TextWrapping="Wrap"
                                                     AcceptsReturn="True"
                                                     Padding="4"
                                                     Margin="0,0,0,7"
                                                     BorderBrush="#CED4DA"
                                                     BorderThickness="1"/>
                                            
                                            <TextBlock Text="First Answer:" 
                                                       FontSize="12"
                                                       Margin="0,0,0,3"
                                                       Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding FirstAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="12"
                                                         Height="24"
                                                         Padding="3"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Second Answer:" 
                                                           FontSize="12" 
                                                           Margin="0,0,0,3"
                                                           Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding SecondAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="12"
                                                         Height="24"
                                                         Padding="3"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Third Answer:" 
                                                           FontSize="12"
                                                           Margin="0,0,0,3"
                                                           Foreground="#6C757D" />
                                                
                                                <TextBox Text="{Binding ThirdAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="12"
                                                         Height="24"
                                                         Padding="3"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Fourth Answer:" 
                                                           FontSize="12"
                                                           Margin="0,0,0,3"
                                                           Foreground="#6C757D" />
                                            
                                                <TextBox Text="{Binding FourthAnswer, UpdateSourceTrigger=PropertyChanged}" 
                                                         FontSize="12"
                                                         Height="24"
                                                         Padding="3"
                                                         BorderBrush="#CED4DA"
                                                         BorderThickness="1" />
                                            
                                                <TextBlock Text="Correct Answer:" 
                                                           FontSize="12" 
                                                           Margin="0,0,0,3"
                                                           Foreground="#6C757D" />
                                            
                                                <ComboBox SelectedItem="{Binding CorrectAnswer, UpdateSourceTrigger=PropertyChanged}"
                                                          ItemsSource="{Binding AnswerOptions}"
                                                          FontSize="12"
                                                          Height="24"
                                                          Padding="3"
                                                          BorderBrush="#CED4DA"
                                                          BorderThickness="1" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
            </ScrollViewer>
        </Border>
        

        <!-- Save Section -->
        <Border Grid.Row="2"
                MaxHeight="90"
                CornerRadius="8" 
                Padding="18"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1">
            
            <StackPanel>
                <Button Content="Save Quiz" 
                        Command="{Binding SaveQuizCommand}"
                        Style="{StaticResource SuccessButtonStyle}" />
                
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusColor}"
                           FontSize="11"
                           FontWeight="Bold"
                           Margin="0,9,0,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center" />
            </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>


