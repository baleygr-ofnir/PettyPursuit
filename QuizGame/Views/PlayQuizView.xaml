<UserControl x:Class="QuizGame.Views.PlayQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuizGame.Views"
             mc:Ignorable="d">
    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="#34495E" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!-- Back Button -->
            <Button Grid.Column="0"
                    Content="←"
                    Command="{Binding BackToMenuCommand}"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="48"
                    FontWeight="Bold"
                    Margin="20,0,0,0"
                    Cursor="Hand"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center" />
            
            
            <!-- Title -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding QuizTitle}"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
            
            <StackPanel Grid.Column="2"
                        Orientation="Vertical"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Center">
                <!-- Score -->
                <TextBlock Text="{Binding ScoreText}"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Right" />
                <!-- Score Percentage -->
                <TextBlock Text="{Binding PercentageText}"
                           FontSize="14"
                           Foreground="#BDC3C7"
                           HorizontalAlignment="Right" />
                
            </StackPanel>
        </Grid>
        
        <!-- Quiz Selections -->
        <StackPanel Grid.Row="1"
                    Visibility="{Binding IsQuizSelectionVisible}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="500">
            
            <TextBlock Text="Select a Quiz to Play"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"
                       Foreground="#2C3E50" />
            
            <ListBox ItemsSource="{Binding AvailableQuizzes}"
                     SelectedItem="{Binding SelectedQuiz}"
                     Height="300"
                     FontSize="16"
                     Padding="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Padding="10" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Start Button -->
            <Button Content="Start Quiz"
                    Command="{Binding StartQuizCommand}"
                    Height="50"
                    Width="200"
                    Margin="0,30,0,0"
                    FontSize="18"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Quiz Questions Section -->
        <Grid Grid.Row="1"
              Visibility="{Binding IsQuestionVisible}"
              Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Questions Counter -->
            <TextBlock Grid.Row="0"
                       Text="{Binding QuestionCounterText}"
                       Margin="0,0,0,20"
                       FontSize="16"
                       Foreground="#7F8C8D" />
            
            <!-- Question Text -->
            <Border Grid.Row="1"
                    Padding="30"
                    Margin="0,0,0,30"
                    CornerRadius="10"
                    Background="White"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1">
                <TextBlock Text="{Binding CurrentQuestion.QuestionText}"
                           FontSize="24"
                           TextWrapping="Wrap"
                           Foreground="#2C3E50" />
            </Border>
            
            <!-- Answer Options -->
            <ItemsControl Grid.Row="2"
                          ItemsSource="{Binding CurrentQuestion.Answers}"
                          VerticalAlignment="Top">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}"
                                Command="{Binding DataContext.AnswerSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Height="70"
                                Padding="20"
                                Margin="0,0,0,15"
                                FontSize="18"
                                Background="White"
                                BorderBrush="#3498DB"
                                BorderThickness="2"
                                HorizontalAlignment="Left"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EBF5FB" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        
        <!-- Results Display -->
        <StackPanel Grid.Row="1"
                    Visibility="{Binding IsResultsVisible}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Finished Quiz!"
                       FontSize="36"
                       FontWeight="Bold"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"
                       Foreground="#2C3E50" />
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding FinalScoreText}"
                               FontSize="24"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               Foreground="#2C3E50" />
                    <TextBlock Text="{Binding FinalPercentageText}"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#27AE60" />
                </StackPanel>
            </Border>
            
            <Button Content="Go to Quiz Selection"
                    Command="{Binding ResetQuizCommand}"
                    Background="#3498DB"
                    Style="{StaticResource QuizGameButtonStyle}"/>
            
            
            <Button Content="Back to Menu"
                    Command="{Binding BackToMenuCommand}"
                    Margin="0,40,0,0"
                    Background="#3498DB"
                    Style="{StaticResource QuizGameButtonStyle}">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
